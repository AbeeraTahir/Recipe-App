<h1 class="text-center">Shopping List</h1>

<div class="d-flex justify-content-between my-4">
  <div>
    <b>Amount of food items to buy:</b> <%= @recipe_foods.length %>
  </div>
  
  <div>
    <b>Total value of food needed:</b> $<%= @total_price %>
  </div>
</div>

<br/>

<table class="table table-striped table-bordered mt-4">
  <thead>
    <tr>
      <th>Food</th>
      <th class="text-center">Quantity</th>
      <th class="text-center">Price</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe_foods.each do |recipe_food| %>
      <tr>
        <td class="align-middle"><%= recipe_food.food.name %></td>
        <td class="text-center align-middle"><%= recipe_food.quantity %> <%= recipe_food.food.measurement_unit %></td>
        <td class="text-center align-middle">$<%= recipe_food.food.price*recipe_food.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>


